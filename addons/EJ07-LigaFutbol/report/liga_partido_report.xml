<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_liga_partido" model="ir.actions.report">
        <field name="name">Acta del Partido</field>
        <field name="model">liga.partido</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">EJ07-LigaFutbol.report_partido_liga_template</field>
        <field name="report_file">EJ07-LigaFutbol.report_partido_liga_template</field>
        <field name="print_report_name">'Partido - %s vs %s' % (object.equipo_casa.nombre, object.equipo_fuera.nombre)</field>
        <field name="binding_model_id" ref="model_liga_partido"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_partido_liga_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center" style="border-bottom: 2px solid black; margin-bottom: 20px;">
                            <h2>Acta Oficial de Partido</h2>
                        </div>

                        <table style="width: 100%; text-align: center; border-collapse: collapse; margin-top: 0px;">
                            <tr>
                                <td style="width: 40%; vertical-align: top;">
                                    <h3 t-field="doc.equipo_casa.nombre" style="margin-bottom: 10px;"/>
                                    <div style="font-size: 48px; font-weight: bold;">
                                        <span t-field="doc.goles_casa"/>
                                    </div>
                                    <p style="color: #666; font-size: 12px;">LOCAL</p>
                                </td>

                                <td style="width: 20%; vertical-align: middle;">
                                    <span style="font-size: 24px; font-weight: 300; color: #999;">VS</span>
                                </td>

                                <td style="width: 40%; vertical-align: top;">
                                    <h3 t-field="doc.equipo_fuera.nombre" style="margin-bottom: 10px;"/>
                                    <div style="font-size: 48px; font-weight: bold;">
                                        <span t-field="doc.goles_fuera"/>
                                    </div>
                                    <p style="color: #666; font-size: 12px;">VISITANTE</p>
                                </td>
                            </tr>
                        </table>
						
						<div style="width: 100%; margin-top: 30px;">
                            <table class="table table-sm" style="width: 100%; border-top: 1px solid #dee2e6;">
                                <thead>
                                    <tr style="background-color: #f8f9fa;">
                                        <th style="padding: 8px; text-align: left; border-bottom: 2px solid #333;">Detalle</th>
                                        <th style="padding: 8px; text-align: right; border-bottom: 2px solid #333;">Resultado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="padding: 8px; border-bottom: 1px solid #eee;">Estado del encuentro</td>
                                        <td style="padding: 8px; text-align: right; border-bottom: 1px solid #eee;">
                                            <span class="badge badge-secondary" style="text-transform: uppercase;">Finalizado</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px; border-bottom: 1px solid #eee;">Diferencia de goles</td>
                                        <td style="padding: 8px; text-align: right; border-bottom: 1px solid #eee; font-weight: bold;">
                                            <t t-esc="abs(doc.goles_casa - doc.goles_fuera)"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>